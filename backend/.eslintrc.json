{
  "parser": "babel-eslint",
  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["prettier"],
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": ["error", { "args": "none" }],
    "no-var": "error",
    "prefer-const": ["error", { "destructuring": "all" }],
    "prefer-template": "error",
    "require-await": "error"
  }
}
